<div class="mt-4">
    <h3>Trash Page</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Created At</th>
                <th scope="col" colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.createdAt}}</td>
                <td><a class="btn btn-link btn-restore" data-id="{{this._id}}">Restore</a></td>
                <td><a class="btn btn-link" data-bs-toggle="modal" data-id="{{this._id}}"
                        data-bs-target="#exampleModal">Force Delete</a></td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5">
                    <label>Trash is empty.</label>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal. Confirm Delete -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Do you want to delete this course?
            </div>
            <div class="modal-footer">
                <button type="button" id="btnDeleteCourse" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!--Delete Hidden Form -->
<form method="POST" name="deleteForm"></form>
<form method="POST" name="restoreForm"></form>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    var exampleModal = document.getElementById('exampleModal');
    var formDelete = document.forms['deleteForm'];
    var restoreDelete = document.forms['restoreForm'];
    exampleModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var idCourse = button.getAttribute('data-id');
        var btnDeleteCourse = document.getElementById('btnDeleteCourse');

        btnDeleteCourse.onclick = function () {
            formDelete.action = '/courses/' + idCourse + '/forceDelete?_method=Delete';
            formDelete.submit();
        }
    });

    document.addEventListener('DOMContentLoaded', (event) => {
        var btnRs = $(".btn-restore");
        btnRs.click(function (e) {
            e.preventDefault();
            var courseId = $(this).data('id');
            restoreForm.action = '/courses/' + courseId + '/restore?_method=PATCH';
            restoreForm.submit();
        })
    });
</script>