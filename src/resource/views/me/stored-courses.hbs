<div class="mt-4">
    <h3></h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Created At</th>
                <th scope="col" colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.createdAt}}</td>
                    <td><a class="btn btn-link" href="/courses/{{this._id}}/edit">Edit</a></td>
                    <td><a class="btn btn-link">Delete</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>